<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- fragment 영역 레이아웃 -->
    <LinearLayout
        android:id="@+id/view_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
    </LinearLayout>

    <!-- 탭 영역 레이아웃 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ff3E454D"
        android:orientation="horizontal"

        android:padding="2dp"
        android:weightSum="4">

    <!-- 탭 버튼 각각의 레이아웃 (탭 개수만큼 추가). -->
        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="fill_parent"
          android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ff3E454D"
                android:gravity="center_horizontal"
                android:id="@+id/lay1">
                <ImageButton
                    android:id="@+id/bt_oneFragment"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/date"
                    android:scaleType="fitCenter"
                    android:background="#ff3E454D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="개인시간"
                    android:textColor="#ffffffff"
                    android:background="#ff3E454D"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/txt1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff212529" />
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ff3E454D"
                android:gravity="center_horizontal"
                android:id="@+id/lay2">
                <ImageButton
                    android:id="@+id/bt_twoFragment"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/time"
                    android:scaleType="fitCenter"
                    android:background="#ff3E454D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="시간표"
                    android:textColor="#ffffffff"
                    android:background="#ff3E454D"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/txt2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff212529" />
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ff3E454D"
                android:gravity="center_horizontal"
                android:id="@+id/lay3">
                <ImageButton
                    android:id="@+id/bt_threeFragment"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/calendar"
                    android:scaleType="fitCenter"
                    android:background="#ff3E454D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="캘린더"
                    android:textColor="#ffffffff"
                    android:background="#ff3E454D"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/txt3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff212529" />
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ff3E454D"
                android:gravity="center_horizontal"
                android:id="@+id/lay4">
                <ImageButton
                    android:id="@+id/bt_fourFragment"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/setting"
                    android:scaleType="fitCenter"
                    android:background="#ff3E454D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="설정"
                    android:textColor="#ffffffff"
                    android:background="#ff3E454D"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/txt4" />
            </LinearLayout>

        </LinearLayout>
     </LinearLayout>

</LinearLayout>
